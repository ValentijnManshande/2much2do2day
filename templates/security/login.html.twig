{% extends 'main/index.html.twig' %}

{% block title %}Log in! {{ parent() }}{% endblock %}
{% block navigation %}
    <header>
        <h1 class="h3 mb-3 text-center">Log hier in</h1>
    </header>
{% endblock %}

{% block content %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>
    <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="_remember_me">
        <label class="form-check-label"> Onthoud mij </label>
    </div>
    <div class="row">
        <div class="col">
            <button class="btn btn-lg btn-primary" type="submit">
                Inloggen
            </button>
        </div>
        <div class="col">
            <a href={{path('register')}}> 
                Registreer een account
            </a>
        </div>
    </div>
    <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
    >
</form>
{% endblock %}
